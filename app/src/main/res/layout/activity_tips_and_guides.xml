<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".TipsAndGuidesActivity">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/tipsBackButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back_button"
        android:contentDescription="Back Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tipsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips &amp; Guides"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/tipsHomeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/home_icon"
        android:contentDescription="Home Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Filter Buttons -->
    <LinearLayout
        android:id="@+id/filterButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tipsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All"
            android:backgroundTint="#FFCDD2"
            android:textColor="#212121"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnVideos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Videos"
            android:backgroundTint="#FFCDD2"
            android:textColor="#212121"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnInfographics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Infographics"
            android:backgroundTint="#FFCDD2"
            android:textColor="#212121"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnArticles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Articles"
            android:backgroundTint="#FFCDD2"
            android:textColor="#212121"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Content: simple sections inside a ScrollView -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/filterButtonsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Videos Section -->
            <LinearLayout
                android:id="@+id/videosSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="6dp" />

                <!-- Simple video rows (icon + title) -->
                <LinearLayout
                    android:id="@+id/videoItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_media_play" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="DO NOT USE Waterproof Smartphone in Sea Salt Water! [Disassembly]"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videoItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_media_play" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="Whether in the sun, on the beach or near the water, hereâ€™s how to protect your phone this summer"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videoItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_media_play" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="What To Do If Your Phone Fell In WATER/SALT WATER/SOLUTIONS"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videoItem4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_media_play" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="What to do if you drop your iPhone in salt water?"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Infographics Section -->
            <LinearLayout
                android:id="@+id/infographicsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Infographics"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="6dp" />

                <ImageView
                    android:id="@+id/infoImg1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/infographic1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/infoImg2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/infographic2"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/infoImg3"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/infographic3"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/infoImg4"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/infographic4"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/infoImg5"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/infographic5"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <!-- Articles Section -->
            <LinearLayout
                android:id="@+id/articlesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Articles"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="6dp" />

                <LinearLayout
                    android:id="@+id/articleItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/article" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="8 ways to beach proof your phone"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/articleItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/article" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="How to Beach-Proof Your Phone and Other Electronic Devices"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/articleItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/article" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="15-ingenious-hacks-to-protect-your-phone-at-the-beach"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

