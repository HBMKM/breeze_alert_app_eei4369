<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button_location"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/back_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Title -->
    <TextView
        android:id="@+id/location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignTop="@id/back_button_location"
        android:layout_centerHorizontal="true" />

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/location_title"
        android:layout_marginTop="20dp" />

    <!-- Search Box -->
    <EditText
        android:id="@+id/editText_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_fragment"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Enter a location"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#666666" />

    <!-- Show Location Button -->
    <Button
        android:id="@+id/button_show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Location"
        android:layout_below="@id/editText_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Checking..."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/button_show_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>





