<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breeze Alert"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="8dp"/>

    <!-- Warning Image -->
    <ImageView
        android:id="@+id/warningImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/warning"
        android:contentDescription="Warning Sign"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Warning Message -->
    <TextView
        android:id="@+id/warningMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="High Humidity Detected"
        android:textColor="#B71C1C"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/warningImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Sensor Values Group -->
    <LinearLayout
        android:id="@+id/sensorValuesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/warningMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:id="@+id/humidityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💧 Humidity : 78%"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/brightnessValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☀ Brightness : Moderate"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/motionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📉 Motion Detected : None"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/locationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Location : Coastal Risk Zone"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <!-- Suggestion Label -->
    <TextView
        android:id="@+id/suggestionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestion"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/sensorValuesLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Suggestion Text -->
    <TextView
        android:id="@+id/suggestionMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Move to indoor"
        android:textSize="20sp"
        android:textColor="#B71C1C"
        app:layout_constraintTop_toBottomOf="@id/suggestionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:textAlignment="center"/>

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:weightSum="2"
        android:gravity="center">

        <Button
            android:id="@+id/acknowledgeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Acknowledge"
            android:backgroundTint="#B71C1C"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/dismissButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Dismiss"
            android:backgroundTint="#B71C1C"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








