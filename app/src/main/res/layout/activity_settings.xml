<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button + App Title Centered -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/back_button_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/back_button"
                android:contentDescription="Back"
                android:layout_marginStart="0dp" />

            <TextView
                android:id="@+id/settings_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Breeze Alert"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Settings Title (Moved up) -->
        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Sensors Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensors"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Humidity Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Brightness Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Brightness"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Motion Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Motion"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_motion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Location Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Location Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Alert Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Sound -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:textSize="18sp"
            android:layout_marginTop="6dp" />

        <SeekBar
            android:id="@+id/seekbar_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#FF0000"
            android:paddingVertical="6dp" />

        <!-- Vibration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration"
            android:textSize="18sp"
            android:layout_marginTop="12dp" />

        <SeekBar
            android:id="@+id/seekbar_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#FF0000"
            android:paddingVertical="6dp" />
    </LinearLayout>
</ScrollView>


